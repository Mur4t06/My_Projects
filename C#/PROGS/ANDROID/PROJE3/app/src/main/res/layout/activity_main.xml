<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etMetin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etMetin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/etMetin1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etMetin1"
        app:layout_constraintTop_toBottomOf="@+id/etMetin1" />

    <Button
        android:id="@+id/btnHesapla1"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_marginTop="48dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@+id/etMetin2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etMetin2"
        app:layout_constraintTop_toBottomOf="@+id/etMetin2" />

    <Button
        android:id="@+id/btnHesapla2"
        android:layout_width="42dp"
        android:layout_height="39dp"
        android:layout_marginTop="48dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@+id/etMetin2"
        app:layout_constraintHorizontal_bias="0.345"
        app:layout_constraintStart_toStartOf="@+id/etMetin2"
        app:layout_constraintTop_toBottomOf="@+id/etMetin2" />

    <Button
        android:id="@+id/btnHesapla3"
        android:layout_width="43dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:text="*"
        app:layout_constraintEnd_toEndOf="@+id/etMetin2"
        app:layout_constraintHorizontal_bias="0.662"
        app:layout_constraintStart_toStartOf="@+id/etMetin2"
        app:layout_constraintTop_toBottomOf="@+id/etMetin2" />

    <Button
        android:id="@+id/btnHesapla4"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="44dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="@+id/etMetin2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etMetin2"
        app:layout_constraintTop_toBottomOf="@+id/etMetin2" />

    <TextView
        android:id="@+id/twSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="SONUÇ"
        app:layout_constraintEnd_toEndOf="@+id/btnHesapla1"
        app:layout_constraintStart_toStartOf="@+id/btnHesapla1"
        app:layout_constraintTop_toBottomOf="@+id/btnHesapla1" />

    <TextView
        android:id="@+id/twSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="SONUÇ"
        app:layout_constraintEnd_toEndOf="@+id/btnHesapla2"
        app:layout_constraintStart_toStartOf="@+id/btnHesapla2"
        app:layout_constraintTop_toBottomOf="@+id/btnHesapla2" />

    <TextView
        android:id="@+id/twSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="SONUÇ"
        app:layout_constraintEnd_toEndOf="@+id/btnHesapla3"
        app:layout_constraintStart_toStartOf="@+id/btnHesapla3"
        app:layout_constraintTop_toBottomOf="@+id/btnHesapla3" />

    <TextView
        android:id="@+id/twSonuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="SONUÇ"
        app:layout_constraintEnd_toEndOf="@+id/btnHesapla4"
        app:layout_constraintStart_toStartOf="@+id/btnHesapla4"
        app:layout_constraintTop_toBottomOf="@+id/btnHesapla4" />


</androidx.constraintlayout.widget.ConstraintLayout>